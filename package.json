{
  "name": "adonisjs-ide",
	"displayName": "Adonisjs Ide",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Formatters",
		"Other"
	],
	"preview": true,
	"activationEvents": [
        "onCommand:adonisjs-ide.helloWorld",
		"onLanguage:typescript",
		"workspaceContains:ace"
	],
	"author": {
		"name": "EgyJs",
		"url": "https://egyjs.com/"
	},
	"publisher": "egyjs",
	"bugs": {
		"url": "https://github.com/egyjs/vscode-adonisjs-ide/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/egyjs/vscode-adonisjs-ide"
	},
	"homepage": "https://github.com/egyjs/vscode-adonisjs-ide/blob/master/README.md",
	"keywords": [
		"adonis",
		"edge",
		"template",
		"snippet",
		"formatter",
		"nodejs",
		"ide"
	],
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#3d2eb5",
		"theme": "dark"
	  },
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "Adonisjs IDE",
				"properties": {
					"_goto.quickJump": {
						"type": "boolean",
						"default": true,
						"description": "Use 'Ctrl' or 'Alt' + click"
					},
					"_goto.folderTip": {
						"type": "boolean",
						"default": true,
						"description": "Display path name"
					},
					"_goto.maxLinesCount": {
						"type": "integer",
						"default": 666,
						"description": "Maximum number of scanning rows"
					},
					"_goto.extensions": {
						"type": "array",
						"default": [
							".ts",
							".edge"
						],
						"items": {
							"type": "string"
						},
						"minItems": 1,
						"uniqueItems": true,
						"description": "Multiple extensions"
					},
					"_goto.view.regex": {
						"type": "string",
						"default": "(?<=view\\(['\"]|view.render\\(['\"]|view.renderSync\\(['\"]|View::make\\(['\"]|@include\\(['\"]|@layout\\(['\"]|@!component\\(['\"]|Inertia::render\\(['\"]|\\<)(\\<x-|\\<livewire:|[^'\" \\/>]+)",
						"description": "Custom regex for matching strings"
					},
					"_goto.view.folders": {
						"type": "object",
						"default": {
							"layouts": "/resources/views/layouts",
							"vendor": "/resources/views/vendor",
							"project": "/resources/views"
						},
						"items": {
							"type": "string"
						},
						"minItems": 1,
						"uniqueItems": true,
						"description": "Multiple folders"
					},					
					"_goto.controller.regex": {
						"type": "string",
						"default": "(?<=Route\\.[a-zA-Z]+\\( ?['\"] ?.+['\"], ?['\"])([a-zA-Z0-9_.]+)(?=['\"])",
						"description": "Custom regex for matching strings"
					},
					"_goto.controller.folders": {
						"type": "object",
						"default": {
							"project": "/app/Controllers/Http"
						},
						"items": {
							"type": "string"
						},
						"minItems": 1,
						"uniqueItems": true,
						"description": "Multiple folders"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	},
	"extensionDependencies": [
		"luongnd.edge"
	]
}
